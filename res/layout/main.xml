<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <!-- 入力欄 -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summary"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="7pt"
                    android:textColor="#333"
                    />
            <EditText
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/summary_example"
                    android:textSize="8pt"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="7pt"
                    android:textColor="#333"
                    />
            <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textSize="8pt"
                    android:minLines="2"
                    />

        </LinearLayout>
        <ImageView
                android:id="@+id/icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_dummy"
                android:contentDescription="@string/icon"/>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#D4FFD1"
            >

        <LinearLayout
                android:id="@+id/selector_panel"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                >
            <!-- プロジェクト -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    >
                <TextView
                        style="@style/CaptionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project"
                        />

                <Spinner
                        android:id="@+id/project_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>
            <TableLayout
                    android:id="@+id/issue_attribute_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    >
                <!-- 種別 -->
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                            style="@style/CaptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_type"
                            />
                    <Spinner
                            android:id="@+id/issue_type_spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_row_height"
                            />
                </TableRow>
                <!-- カテゴリ -->
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                            style="@style/CaptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/component"
                            />
                    <Spinner
                            android:id="@+id/component_spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_row_height"
                            />
                </TableRow>
                <!-- 優先度 -->
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                            style="@style/CaptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/priority"
                            />
                    <Spinner
                            android:id="@+id/priority_spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_row_height"
                            />
                </TableRow>
                <!-- 担当者 -->
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                            style="@style/CaptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user"
                            />
                    <Spinner
                            android:id="@+id/user_spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_row_height"
                            />
                </TableRow>
                <!-- 期限日 -->
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                            style="@style/CaptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/due_date"
                            />
                    <TextView
                            android:id="@+id/due_date"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_row_height"
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            android:text="@string/no_due_date"
                            android:textSize="8pt"
                            android:textColor="#000"
                            />
                    <ImageView
                            android:id="@+id/remove_due_date"
                            android:src="@drawable/ic_action_navigation_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:contentDescription="@string/no_component"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
            android:id="@+id/ad_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>
